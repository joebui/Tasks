<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:padding="@dimen/twenty"
            android:background="@color/green" android:layout_marginBottom="@dimen/ten">
        <ImageView android:layout_width="@dimen/fifty" android:layout_height="@dimen/fifty"
                android:src="@drawable/ic_action_view_as_list_dark"
                android:layout_marginRight="10px" android:layout_gravity="center"
                android:layout_marginBottom="5px"/>

        <TextView android:layout_width="match_parent" android:id="@+id/row"
                  android:layout_height="match_parent" android:textSize="40px"
                android:layout_gravity="center" android:textColor="@color/black"/>
    </LinearLayout>
</LinearLayout>